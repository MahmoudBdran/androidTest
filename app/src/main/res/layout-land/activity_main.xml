<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/above_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:background="@color/above_background_coloe"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fifth_result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:textColor="@color/secondaryTextColor" />

                <TextView
                    android:id="@+id/fourth_result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:textColor="@color/secondaryTextColor" />

                <TextView
                    android:id="@+id/third_result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:textColor="@color/secondaryTextColor" />

                <TextView
                    android:id="@+id/second_result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:textColor="@color/textColor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/first_result_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:hint="0"

                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColor"
                    android:textSize="35dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/below_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/below_background_coloe"
            >

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="1">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="C"

                            android:gravity="center"
                            android:textAlignment="center"
                            android:id="@+id/clear_btn"
                            android:textColor="@color/delete_color"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/back_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="BACK"
                            android:textAlignment="center"
                            android:textColor="@color/delete_color"
                            android:textSize="20dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/mod_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="%"
                            android:textAlignment="center"
                            android:textColor="@color/op_color"
                            android:textSize="25dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/div_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/op_color"
                            android:textSize="25dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="7"
                            android:textAlignment="center"
                            android:id="@+id/seven_btn"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/eight_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="8"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/nine_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/mul_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="*"
                            android:textAlignment="center"
                            android:textColor="@color/op_color"
                            android:textSize="25dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="4"
                            android:textAlignment="center"
                            android:id="@+id/four_btn"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/five_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/six_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="6"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/add_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="+"
                            android:textAlignment="center"
                            android:textColor="@color/op_color"
                            android:textSize="25dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/one_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="1"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/two_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="2"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/three_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="3"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/sub_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="@color/op_color"
                            android:textSize="25dp"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/doubleZero_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="00"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/zero_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp"
                            android:gravity="center" />


                        <TextView
                            android:id="@+id/dot_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="."
                            android:textAlignment="center"
                            android:textColor="@color/textColor"
                            android:textSize="25dp" />


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="0dp"
                            android:id="@+id/equal"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:src="@drawable/ic_equal"
                            app:backgroundTint="@color/op_color"
                            android:textColor="@color/textColor"
                            android:textSize="35dp"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hhhhhhh"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/Calc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textColor="#7A0404"
        android:textSize="20dp"
        android:id="@+id/calc_dot"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:layout_toEndOf="@id/Calc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="×"
        android:textColor="#A3a2a2"
        android:textSize="30dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/exit_icon"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_invert_colors_black_24dp"
        android:layout_margin="10dp"
        android:id="@+id/invert_colors"/>




</RelativeLayout>